        manager = new Manager("Monikue","Monik","manager1","manager1", "Monikue.Monik@gmail.com", "8674412254", "Vilnius", HB, "Monikue.Monik@cargo.com");

        destination = new Destination("Vilnius", "Kaunas", manager);

        checkpointas = new Checkpoint("Vilnius", arr, leave, destination);
    }

    @Test
    void testToString() {
        assertEquals("Kontrolinis punktas -> Vilnius, Reise:(Vilnius - Kaunas)", checkpointas.toString());
    }

